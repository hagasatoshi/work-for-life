= render 'configuration_dialog', orgs: @orgs, repos: @repos
.main
  .header
    .container
      .title Work Life Balance
      .configuration
        a.btn.blue href="javascript:void(0)" onclick="showDialog();return false;" 設定を変更する
  .content
    .container
      .content-header
        .repository
          span.info = @org_name
          span.devide
          span.info = @repo_name
        .term
          span.date = @from_date.strftime('%Y-%m-%d')
          span.devide
          span.date = @to_date.strftime('%Y-%m-%d')
      .chart-container
        .commit-counts
          - Constants::DOW.each do |dow|
            .row
              .col.dow = dow
              - Constants::TIME_ARRAY.each do |time_desc|
                .col.time
                  .circle style=circle_style(@commit_counts[dow][time_desc])
                  .line
              .clear
          .row.footer
            .col.offset
            - Constants::TIME_ARRAY.each do |time_desc|
              .col.time = time_desc
            .clear
